    int total_marks=scan.nextInt();
    System.out.println("enter the marks if subject 1");
    float subject1=scan.nextFloat();
    result=result+subject1;
    System.out.println("enter the marks if subject 2");
    float subject2=scan.nextFloat();
      result=result+subject2;
    System.out.println("enter the marks if subject 3");
    float subject3=scan.nextFloat();
      result=result+subject3;
    System.out.println("enter the marks if subject 4");
    float subject4=scan.nextFloat();
      result=result+subject4;
