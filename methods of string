import java.util.Scanner;
class HelloWorld {
    public static void main(String[] args) {
       String name="Nishtha";
       System.out.println(name);
       
    //   length
       int length=name.length();
       System.out.println(length);
       
    //   lowercase
       String lower_case=name.toLowerCase();
       System.out.println(lower_case);
       
    //   uppercase
       String upper_case=name.toUpperCase();
       System.out.println(upper_case);
       
    //   trim
       String nonTrim="                  Nishtha Aneja    ";
       System.out.println(nonTrim);
        System.out.println(nonTrim.trim());
        
    // substring(index start from 0)
    System.out.println(name.substring(4));
    
    // substring with start point and end point(its having condition that it will include start point only only end point one which means 2 index will be printed the strating point till 5th index therfore its not printing 6th index)
    System.out.println(name.substring(2,6));
    
    // replace
    System.out.println(name.replace('t','i'));
    System.out.println(name.replace("tha","i"));
    
    // starts with (boolen "true"/"false")
    System.out.println(name.startsWith("N"));
    
    // ends with (bolean true/false)
    System.out.println(name.endsWith("ja"));
    
    // charater at which index
    System.out.println(name.charAt(2));
    
    // index return
    System.out.println(name.indexOf("h"));
    // index return while giving starting index
    System.out.println(name.indexOf('h',4));
    
    // return last index
    System.out.println(name.lastIndexOf('h'));
    // always return -1 if the character is not exist in string
    System.out.println(name.lastIndexOf('j'));
     // equals
        System.out.println(name.equals("Nishtha"));
        // equales ignorecase
        System.out.println(name.equalsIgnoreCase("NISHtha"));
        System.out.println(name.equalsIgnoreCase("nishta"));
    }
    
    }
}
